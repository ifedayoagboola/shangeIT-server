generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role{
  ADMIN
  USER
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Offer {
  id Int @id @default(autoincrement())
  fromCurrency String
  toCurrency String
  rate String
  amount String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("offers")
}
